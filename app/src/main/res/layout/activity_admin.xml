<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin">
    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/logo"
        android:text="log out"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/icon"/>
    <TextView
        android:id="@+id/pom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:text="Tap to see the orders"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="@color/logo"
        android:textSize="25sp"
        android:textStyle="italic"/>
    <ImageView
        android:id="@+id/klik"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        android:layout_below="@+id/pom"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/klik"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="40dp"
        android:text="Daily remeinder: You are working the job you love, while making oder people happier and more poor"
        android:textAlignment="center" />



</RelativeLayout>