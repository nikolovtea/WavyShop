<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminDetails">
    <ImageView
        android:id="@+id/icon"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:src="@drawable/icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/naslov"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/logo"/>


    <RelativeLayout
        android:id="@+id/ImeKorisnikDetali"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="200dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/imeKorisnikLevo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="50dp"
            android:text="Full Name:"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:backgroundTint="@color/logo"
            android:background="@drawable/rounded_border"
            />
        <TextView
            android:id="@+id/imeKorisnikDesno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/imeKorisnikLevo"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/datumVolonterDetali"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ImeKorisnikDetali"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/datumVolonterLevo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:text="Date:"
            android:layout_alignParentLeft="true"
            android:textColor="@color/white"
            android:layout_marginLeft="50dp"
            android:backgroundTint="@color/logo"
            android:background="@drawable/rounded_border"/>
        <TextView
            android:id="@+id/datumVolonterDesno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/datumVolonterLevo"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/tipUslugaVolonterDetali"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/datumVolonterDetali"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/tipUslugaVolonterLevo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:text="Item"
            android:layout_alignParentLeft="true"
            android:textColor="@color/white"
            android:layout_marginLeft="50dp"
            android:backgroundTint="@color/logo"
            android:background="@drawable/rounded_border"/>
        <TextView
            android:id="@+id/tipUslugaVolonterDesno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/tipUslugaVolonterLevo"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rastojanieDetali"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tipUslugaVolonterDetali"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/rastojanieLevo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:text="Address"
            android:layout_alignParentLeft="true"
            android:textColor="@color/white"
            android:layout_marginLeft="50dp"
            android:backgroundTint="@color/logo"
            android:background="@drawable/rounded_border"/>
        <TextView
            android:id="@+id/rastojanieDesno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/rastojanieLevo"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
